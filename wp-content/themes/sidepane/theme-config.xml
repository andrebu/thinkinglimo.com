<?xml version="1.0" encoding="utf-8"?>
<!-- 
This xml file specifies the option modules in the Themify Panel (refer to: http://themify.me/docs/config-xml).
To override this file, create a 'custom-config.xml' file in the theme folder.
If custom-config.xml exists, the theme will ignore theme-config.xml.
-->
<config>
	
	<folders>
		<images src="uploads/" />
	</folders>
	
	<panel title="Settings">
		
		<tab title="General">
			
			<custom-module title="Favicon" function="favicon" targte="uploads/favicon/" />
			<custom-module title="Custom Feed URL" function="custom_feed_url" />
			<custom-module title="Header Code" function="header_html" />
			<custom-module title="Footer Code" function="footer_html" />
			<custom-module title="Search Settings" function="search_settings" />
			<custom-module title="Feed Settings" function="feed_settings" />
				
		</tab>
		
		<tab title="Theme Settings">
			
			<custom-module title="Image Script (img.php) Settings" function="img_settings" />
			<custom-module title="Shortcode Settings" function="shortcode_settings" />
			<custom-module title="Default Index Layout (archive, category, search, tag pages, etc.)" function="default_layout" />
			<custom-module title="Default Post Layout (single post view)" function="default_post_layout" />
			<custom-module title="Default Static Page Layout" function="default_page_layout" />
			<custom-module title="Footer Text" function="footer_text_left" />
			<custom-module title="Exclude RSS Link" function="exclude_rss" />
		
		</tab>
		
		
	</panel>
	
	<panel title="Styling">
	
		<tab title="Background">
			
			<element title="Body Background" selector="body">
				<module name="image-preview" src="uploads/bg/" />
				<module name="background-image" target="uploads/bg/" />
				<module name="background-color" />
				<module name="background-repeat" />
				<module name="background-position" />
			</element>

		</tab>

		<tab title="Content Area">
			
			<element title="Content Area" selector="#content">
				<module name="width" />
				<module name="divider" />
				<module name="padding" />
			</element>

		</tab>

		<tab title="Body Font">

			<element title="Body Font Styles" selector="body">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="line-height" />
			</element>
			
			<element title="Body a:link" selector="a">
				<module name="color" />
				<module name="text-decoration" />
			</element>
			
			<element title="Body a:hover" selector="body a:hover">
				<module name="color" />
				<module name="text-decoration" />
			</element>
							
		</tab>

		<tab title="Headings">

			<element title="Heading 1 (h1)" selector="h1">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
				<module name="font-style" />
				<module name="font-variant" />
				<module name="line-height" />
				<module name="text-transform" />
				<module name="text-decoration" />
			</element>

			<element title="Heading 2 (h2)" selector="h2">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
				<module name="font-style" />
				<module name="font-variant" />
				<module name="line-height" />
				<module name="text-transform" />
				<module name="text-decoration" />
			</element>

			<element title="Heading 3 (h3)" selector="h3">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
				<module name="font-style" />
				<module name="font-variant" />
				<module name="line-height" />
				<module name="text-transform" />
				<module name="text-decoration" />
			</element>

			<element title="Heading 4 (h4)" selector="h4">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
				<module name="font-style" />
				<module name="font-variant" />
				<module name="line-height" />
				<module name="text-transform" />
				<module name="text-decoration" />
			</element>

			<element title="Heading 5 (h5)" selector="h5">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
				<module name="font-style" />
				<module name="font-variant" />
				<module name="line-height" />
				<module name="text-transform" />
				<module name="text-decoration" />
			</element>

			<element title="Heading 6 (h6)" selector="h6">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
				<module name="font-style" />
				<module name="font-variant" />
				<module name="line-height" />
				<module name="text-transform" />
				<module name="text-decoration" />
			</element>
						
		</tab>

		<tab title="Form Elements">

			<element title="Form Fields (input, textarea, etc.)" selector="input[type=text], input[type=password], textarea">
				<module name="background-color" />
				<module name="border" />
				<module name="padding" />
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
			</element>

			<element title="Form Fields :focus" selector="textarea:focus, input[type=password]:focus, input[type=text]:focus">
				<module name="background-color" />
				<module name="border" />
				<module name="color" />
			</element>

			<element title="Form Button" selector="input[type=reset], input[type=submit]">
				<module name="background-color" />
				<module name="border" />
				<module name="color" />
			</element>

			<element title="Form Button :hover" selector="input[type=reset]:hover, input[type=submit]:hover">
				<module name="background-color" />
				<module name="border" />
				<module name="color" />
			</element>
							
		</tab>

		<tab title="Post Title">

			<element title="Post-Title Font Styles" selector=".post-title">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
				<module name="font-style" />
				<module name="font-variant" />
				<module name="line-height" />
				<module name="text-transform" />
				<module name="text-decoration" />
			</element>
			
			<element title="Post-Title a:link" selector=".post-title a">
				<module name="color" />
				<module name="text-decoration" />
			</element>
			
			<element title="Post-Title a:hover" selector=".post a:hover">
				<module name="color" />
				<module name="text-decoration" />
			</element>
				
		</tab>

		<tab title="Page Title">

			<element title="Page Title Font Styles" selector=".page-title">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
				<module name="font-style" />
				<module name="font-variant" />
				<module name="line-height" />
				<module name="text-transform" />
			</element>
							
		</tab>

		<tab title="Post Meta">

			<element title="Post Meta Text" selector=".post-meta">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
			</element>

			<element title="Post Meta :link" selector=".post-meta a">
				<module name="color" />
				<module name="text-decoration" />
			</element>

			<element title="Post Meta :hover" selector=".post-meta a:hover">
				<module name="color" />
				<module name="text-decoration" />
			</element>

			<element title="Post Date" selector=".post-date">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
			</element>

			<element title="More Link" selector=".more-link">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
				<module name="divider" />
				<module name="background-color" />
				<module name="padding" />
				<module name="margin" />
				<module name="border" />
			</element>

			<element title="More Link :hover" selector=".more-link:hover">
				<module name="color" />
				<module name="background-color" />
			</element>
							
		</tab>
		
		<tab title="Site Logo">

			<element title="Site Logo Margin (spacing)" selector="#site-logo">
				<module name="margin" />
			</element>

			<element title="Site Logo" selector="#site-logo a">
				<module name="site_logo" target="uploads/logo/" />
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
				<module name="font-style" />
				<module name="font-variant" />
				<module name="text-transform" />
				<module name="text-decoration" />
			</element>

			<element title="Site Logo a:hover" selector="#site-logo a:hover">
				<module name="color" />
			</element>

		</tab>		

		<tab title="Site Description">

			<element title="Site Description Margin (spacing)" selector="#site-description">
				<module name="margin" />
			</element>

			<element title="Site Description" selector="#site-description">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
				<module name="font-style" />
				<module name="font-variant" />
				<module name="text-transform" />
			</element>

		</tab>		
				
		<tab title="Main Navigation">

			<element title="Main Navigation Wrap" selector="#main-nav-wrap">
				<module name="margin" />
				<module name="divider" />				
				<module name="border" />
			</element>

			<element title="Main Navigation a:link" selector="#main-nav li a">
				<module name="font-family" />
				<module name="font-size" />
				<module name="color" />
				<module name="text-decoration" />
				<module name="text-transform" />
				<module name="divider" />
				<module name="padding" />
				<module name="background-color" />
			</element>

			<element title="Main Navigation a:hover" selector="#main-nav li a:hover">
				<module name="color" />
				<module name="text-decoration" />
				<module name="background-color" />
			</element>

			<element title="Main Navigation Active (current)" selector="#main-nav .current_page_item a, #main-nav .current-menu-item a">
				<module name="color" />
				<module name="background-color" />
			</element>

			<element title="Dropdown" selector="#main-nav ul">
				<module name="background-color" />
				<module name="padding" />
				<module name="border" />
			</element>

			<element title="Dropdown a:link" selector="#main-nav ul a, #main-nav .current_page_item ul a, #main-nav ul .current_page_item a, #main-nav .current-menu-item ul a, #main-nav ul .current-menu-item a">
				<module name="font-family" />
				<module name="font-size" />
				<module name="color" />
				<module name="background-color" />
				<module name="padding" />
				<module name="border" />
			</element>
			
			<element title="Dropdown a:hover" selector="#main-nav ul a:hover, #main-nav .current_page_item ul a:hover, #main-nav ul .current_page_item a:hover, #main-nav .current-menu-item ul a:hover, #main-nav ul .current-menu-item a:hover">
				<module name="color" />
				<module name="background-color" />
			</element>

		</tab>
						
		<tab title="Sidebar">

			<element title="Sidebar Panel" selector="#sidebar-wrap">
				<module name="image-preview" src="uploads/sidebar/" />
				<module name="background-image" target="uploads/sidebar/" />
				<module name="background-color" />
				<module name="background-repeat" />
				<module name="background-position" />
				<module name="divider" />				
				<module name="width" />
				<module name="divider" />				
				<module name="border" />
			</element>

			<element title="Sidebar Font Styles" selector="#sidebar">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="line-height" />
			</element>

			<element title="Sidebar a:link" selector="#sidebar a">
				<module name="color" />
				<module name="text-decoration" />
			</element>
			
			<element title="Sidebar a:hover" selector="#sidebar a:hover">
				<module name="color" />
				<module name="text-decoration" />
			</element>

			<element title="Sidebar Widget Title" selector="#sidebar .widgettitle">
				<module name="font-family" />
				<module name="color" />
				<module name="font-size" />
				<module name="font-weight" />
				<module name="font-style" />
				<module name="font-variant" />
				<module name="line-height" />
				<module name="text-transform" />
				<module name="text-decoration" />
			</element>

			<element title="Sidebar List Item" selector="#sidebar .widget li ">
				<module name="background-color" />
				<module name="margin" />
				<module name="padding" />
				<module name="border" />
			</element>
			
		</tab>
		
		<tab title="Custom CSS">
			
			<element title="Custom CSS" selector="html">
				<module name="custom_css" />
			</element>
			
		</tab>
				
	</panel>

</config>